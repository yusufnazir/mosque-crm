<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-gedcom-families" author="system">
        <createTable tableName="gedcom_families">
            <column name="id" type="VARCHAR(20)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="husband_id" type="VARCHAR(20)"/>
            <column name="wife_id" type="VARCHAR(20)"/>
            <column name="marriage_date" type="DATE"/>
            <column name="marriage_place" type="VARCHAR(255)"/>
            <column name="divorce_date" type="DATE"/>
            <column name="divorce_place" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
