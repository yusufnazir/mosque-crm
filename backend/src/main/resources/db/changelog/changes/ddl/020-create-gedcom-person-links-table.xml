<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="f2345678-a901-bc78-2345-678901fa0001" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="gedcom_person_links"/>
            </not>
        </preConditions>
        <createTable tableName="gedcom_person_links">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="person_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="gedcom_individual_id" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="linked_by" type="VARCHAR(100)"/>
            <column name="link_reason" type="VARCHAR(500)"/>
            <column name="linked_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="mosque_id" type="BIGINT"/>
        </createTable>

        <addUniqueConstraint tableName="gedcom_person_links" columnNames="person_id,gedcom_individual_id"
                             constraintName="uk_person_individual"/>
    </changeSet>

</databaseChangeLog>
