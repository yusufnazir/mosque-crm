<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="f2a3b4c5-d6e7-8901-fabc-012345678001" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="gedcom_media"/>
            </not>
        </preConditions>
        <createTable tableName="gedcom_media">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="file_path" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
            <column name="format" type="VARCHAR(50)"/>
            <column name="individual_id" type="VARCHAR(20)"/>
            <column name="family_id" type="VARCHAR(20)"/>
            <column name="mosque_id" type="BIGINT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
