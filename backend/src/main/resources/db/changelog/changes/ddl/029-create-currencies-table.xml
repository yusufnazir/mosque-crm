<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- currencies: Global reference table of all ISO 4217 currencies (NOT mosque-scoped) -->
    <changeSet id="a1b2c3d4-0029-4aaa-bbbb-000000000001" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="currencies"/>
            </not>
        </preConditions>
        <createTable tableName="currencies">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(3)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="symbol" type="VARCHAR(10)"/>
            <column name="decimal_places" type="INT" defaultValueNumeric="2">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="currencies" indexName="idx_currency_code" unique="true">
            <column name="code"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
