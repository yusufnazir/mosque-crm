<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="008-create-gedcom-sources" author="system">
        <createTable tableName="gedcom_sources">
            <column name="id" type="VARCHAR(20)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="author" type="VARCHAR(255)"/>
            <column name="publication" type="VARCHAR(255)"/>
            <column name="repository" type="VARCHAR(255)"/>
            <column name="call_number" type="VARCHAR(100)"/>
            <column name="notes" type="TEXT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
