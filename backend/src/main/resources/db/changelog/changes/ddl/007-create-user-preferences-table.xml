<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="a1234567-b890-cdef-1234-567890abcde1" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_preferences"/>
            </not>
        </preConditions>
        <createTable tableName="user_preferences">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="language" type="VARCHAR(10)" defaultValue="nl"/>
            <column name="theme" type="VARCHAR(20)" defaultValue="light"/>
            <column name="timezone" type="VARCHAR(50)" defaultValue="Europe/Amsterdam"/>
            <column name="calendar" type="VARCHAR(20)" defaultValue="gregorian"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
