<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="e1234567-f890-ab67-1234-567890ef0001" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="donations"/>
            </not>
        </preConditions>
        <createTable tableName="donations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="person_id" type="BIGINT"/>
            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="donation_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="donation_type" type="VARCHAR(50)"/>
            <column name="payment_method" type="VARCHAR(50)"/>
            <column name="reference" type="VARCHAR(100)"/>
            <column name="receipt_number" type="VARCHAR(50)"/>
            <column name="notes" type="TEXT"/>
            <column name="anonymous" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="mosque_id" type="BIGINT"/>
        </createTable>

        <createIndex tableName="donations" indexName="idx_donation_date">
            <column name="donation_date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
