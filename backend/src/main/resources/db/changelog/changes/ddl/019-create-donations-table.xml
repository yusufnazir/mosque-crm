<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="019-create-donations-table" author="system">
        <createTable tableName="donations">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="person_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="donation_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="donation_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="receipt_number" type="VARCHAR(50)"/>
            <column name="notes" type="VARCHAR(1000)"/>
            <column name="anonymous" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="donations"
                baseColumnNames="person_id"
                constraintName="fk_donations_person"
                referencedTableName="persons"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <createIndex tableName="donations" indexName="idx_donations_person">
            <column name="person_id"/>
        </createIndex>

        <createIndex tableName="donations" indexName="idx_donations_date">
            <column name="donation_date"/>
        </createIndex>

        <createIndex tableName="donations" indexName="idx_donations_type">
            <column name="donation_type"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
