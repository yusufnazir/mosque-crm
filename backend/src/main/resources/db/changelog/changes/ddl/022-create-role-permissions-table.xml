<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="b4567890-c123-de90-4567-890123bc0001" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="role_permissions"/>
            </not>
        </preConditions>
        <createTable tableName="role_permissions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="permission_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP"/>
        </createTable>

        <addUniqueConstraint tableName="role_permissions" columnNames="role_id,permission_id"
                             constraintName="uk_role_permission"/>
    </changeSet>

</databaseChangeLog>
