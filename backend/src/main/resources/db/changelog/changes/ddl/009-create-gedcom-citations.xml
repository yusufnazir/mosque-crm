<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="009-create-gedcom-citations" author="system">
        <createTable tableName="gedcom_citations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="source_id" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="event_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="page" type="VARCHAR(100)"/>
            <column name="text" type="TEXT"/>
            <column name="confidence" type="VARCHAR(20)"/>
        </createTable>

        <createIndex tableName="gedcom_citations" indexName="idx_citation_source">
            <column name="source_id"/>
        </createIndex>

        <createIndex tableName="gedcom_citations" indexName="idx_citation_event">
            <column name="event_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
