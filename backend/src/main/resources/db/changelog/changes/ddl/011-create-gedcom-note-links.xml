<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="e1f2a3b4-c5d6-7890-efab-901234567001" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="gedcom_note_links"/>
            </not>
        </preConditions>
        <createTable tableName="gedcom_note_links">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="note_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="individual_id" type="VARCHAR(20)"/>
            <column name="family_id" type="VARCHAR(20)"/>
            <column name="event_id" type="BIGINT"/>
            <column name="source_id" type="BIGINT"/>
            <column name="mosque_id" type="BIGINT"/>
        </createTable>

        <createIndex tableName="gedcom_note_links" indexName="idx_note_links_note">
            <column name="note_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
