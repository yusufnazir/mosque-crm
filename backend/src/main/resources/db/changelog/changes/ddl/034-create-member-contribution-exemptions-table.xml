<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Create member_contribution_exemptions table -->
    <changeSet id="a1b2c3d4-0034-4aaa-bbbb-000000000001" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="member_contribution_exemptions"/>
            </not>
        </preConditions>
        <createTable tableName="member_contribution_exemptions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="person_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="contribution_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="exemption_type" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="true"/>
            </column>
            <column name="reason" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="start_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATE">
                <constraints nullable="true"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="mosque_id" type="BIGINT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
