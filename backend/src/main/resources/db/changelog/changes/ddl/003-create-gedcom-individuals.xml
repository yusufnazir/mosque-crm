<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="c3d4e5f6-a7b8-9012-cdef-123456789001" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="gedcom_individuals"/>
            </not>
        </preConditions>
        <createTable tableName="gedcom_individuals">
            <column name="id" type="VARCHAR(20)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="given_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(100)"/>
            <column name="sex" type="VARCHAR(1)"/>
            <column name="birth_date" type="DATE"/>
            <column name="birth_place" type="VARCHAR(255)"/>
            <column name="death_date" type="DATE"/>
            <column name="death_place" type="VARCHAR(255)"/>
            <column name="living" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="mosque_id" type="BIGINT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
