<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="f6a7b8c9-d0e1-2345-fabc-456789012001" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="gedcom_events"/>
            </not>
        </preConditions>
        <createTable tableName="gedcom_events">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="individual_id" type="VARCHAR(20)"/>
            <column name="family_id" type="VARCHAR(20)"/>
            <column name="type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="date_value" type="VARCHAR(100)"/>
            <column name="place" type="VARCHAR(255)"/>
            <column name="description" type="TEXT"/>
            <column name="mosque_id" type="BIGINT"/>
        </createTable>

        <createIndex tableName="gedcom_events" indexName="idx_events_individual">
            <column name="individual_id"/>
        </createIndex>
        <createIndex tableName="gedcom_events" indexName="idx_events_family">
            <column name="family_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
