<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006-create-gedcom-events" author="system">
        <createTable tableName="gedcom_events">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE"/>
            <column name="place" type="VARCHAR(255)"/>
            <column name="description" type="TEXT"/>
            <column name="family_id" type="VARCHAR(20)"/>
        </createTable>

        <createIndex tableName="gedcom_events" indexName="idx_event_type">
            <column name="type"/>
        </createIndex>

        <createIndex tableName="gedcom_events" indexName="idx_event_date">
            <column name="date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
