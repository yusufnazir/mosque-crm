<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="d0123456-e789-fa45-0123-456789de0001" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_member_link"/>
            </not>
        </preConditions>
        <createTable tableName="user_member_link">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="person_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="mosque_id" type="BIGINT"/>
            <column name="linked_at" type="TIMESTAMP"/>
        </createTable>

        <addUniqueConstraint tableName="user_member_link" columnNames="user_id,person_id"
                             constraintName="uk_user_person"/>
    </changeSet>

</databaseChangeLog>
