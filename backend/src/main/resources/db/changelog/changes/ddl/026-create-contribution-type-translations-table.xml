<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="a1b2c3d4-0026-4aaa-bbbb-000000000001" author="mosque-crm">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="contribution_type_translations"/>
            </not>
        </preConditions>
        <createTable tableName="contribution_type_translations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="contribution_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="locale" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)"/>
        </createTable>

        <addUniqueConstraint tableName="contribution_type_translations"
                             columnNames="contribution_type_id, locale"
                             constraintName="uq_contrib_type_locale"/>

        <createIndex tableName="contribution_type_translations" indexName="idx_contrib_trans_locale">
            <column name="locale"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
